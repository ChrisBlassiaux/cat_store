  
<%= form_with(model: user, local: true, method: :put) do |form| %>

  <div class="form-group mt-4 mb-4 col-sm">
    <%= form.label :prénom %>
    <%= form.text_field :first_name, class:"form-control", placeholder:"Prénom" %>
  </div>

  <div class="form-group mt-4 col-sm">
    <%= form.label :nom %>
    <%= form.text_field :last_name, class:"form-control", placeholder:"Nom" %>
  </div>

  <div class="text-center mt-4 mb-4">
  <%= form.submit 'Mettre à jour', :class => 'btn btn-success' %>
  </div>
<% end %>