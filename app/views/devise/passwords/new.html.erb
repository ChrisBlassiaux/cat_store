<main class="container mt-5">
  <div class="card my-3 text-center w-50 card-center">
    <h2 class="action-banner card-header">Changez votre mot de passe</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mt-4 mb-4 col-sm">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="actions mt-3 mb-3">
          <%= f.submit "Recevoir un email de changement de mot de passe", class: "btn btn-success" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
    
  </div>
</main>  

  